<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:orientation="horizontal"
    android:weightSum="12">

    <TextView
        android:id="@+id/tv_searched_donorList_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginRight="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_searched_donorList_name"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_collectorList_id"
        android:text="DildarKhan"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_searched_donorList_phone"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_collectorList_name"
        android:text="9921867868"
        android:layout_gravity="center_vertical"
        android:textSize="16dp"
        android:textStyle="bold"/>
    <ImageButton
        android:id="@+id/ib_search_donorList_next"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="50dp"
        android:src="@android:drawable/ic_media_play"/>

</LinearLayout>