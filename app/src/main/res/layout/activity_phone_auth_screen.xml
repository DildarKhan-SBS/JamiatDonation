<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PhoneAuthScreen">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What's you phone number ?"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textSize="18dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_authPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <EditText
            android:id="@+id/input_authPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="number"
            android:gravity="center_horizontal"/>

    </android.support.design.widget.TextInputLayout>
    
    <Button
        android:id="@+id/bt_phoneAuthSendCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Confirmation Code"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="16dp"/>

</LinearLayout>