<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lyt_transfer_screen"
    tools:context=".UserInterface.TransferScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tv_transfer_senderCollectorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sender Collector Name"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_transfer_receiverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receiver Collector/Markz Name"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_transfer_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount 50,000"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_transferOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <EditText
                android:id="@+id/input_transferOTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Transfer OTP"
                android:gravity="center_horizontal"
                android:inputType="number"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/bt_transferSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="16dp"/>

    </LinearLayout>
</RelativeLayout>